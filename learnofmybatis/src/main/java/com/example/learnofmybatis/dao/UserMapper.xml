<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.learnofmybatis.dao.UserMapper">
<!--    <select id="selectBlog" resultType="Blog">-->
<!--        select * from Blog where id = #{id}-->
<!--    </select>-->

    <select id="getUserList" resultType="com.example.learnofmybatis.pojo.User">
        select * from mybatis.user
    </select>

    <select id="getUserById" resultType="com.example.learnofmybatis.pojo.User" parameterType="int">
        select * from mybatis.user where id = #{id}
    </select>

    <select id="addUser" parameterType="com.example.learnofmybatis.pojo.User" resultType="com.example.learnofmybatis.pojo.User">
        insert into mybatis.user (id,name,pwd) values (#{id},#{name},#{pwd});
    </select>


    <update id="updateUser" parameterType="com.example.learnofmybatis.pojo.User">
        update mybatis.user set name = #{name} ,pwd = #{pwd} where id = #{id};
    </update>

    <insert id="addUser2" parameterType="map" >
        insert into mybatis.user (id,name,pwd) values (#{userid},#{userName},#{passWord});
    </insert>

    <select id="getUserLikeByName" resultType="com.example.learnofmybatis.pojo.User" >
        select * from mybatis.user where name like #{name};
    </select>
</mapper>